{
  "extends": "airbnb-base",
  "rules": {
    "func-names": [
      "error",
      "never"
    ],
    // turn off newline after import(require)
    "import/newline-after-import": [
      "off"
    ],
    // Exception just for _id (MongoDB default Index)
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id"
        ]
      }
    ]
  }
}